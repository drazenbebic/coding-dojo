{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "react",
    "module": "commonjs",
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "outDir": "./dist",
    // Optional: place type declarations in a separate folder
    // "declarationDir": "./dist/types",
  },
  "include": ["src"]
}